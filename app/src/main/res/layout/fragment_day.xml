<tr.xip.dinnermenu.ui.widget.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainDishHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/dish_main" />

            <TextView
                android:id="@+id/mainDish"
                style="@style/MenuItemTextStyle"
                tools:text="Nohut" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sideDishHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/dish_side" />

            <TextView
                android:id="@+id/sideDish"
                style="@style/MenuItemTextStyle"
                tools:text="Pirinç Pilavı" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/soupHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/dish_soup" />

            <TextView
                android:id="@+id/soup"
                style="@style/MenuItemTextStyle"
                tools:text="Şehriye" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dessertHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/dish_dessert" />

            <TextView
                android:id="@+id/dessert"
                style="@style/MenuItemTextStyle"
                tools:text="Tatlı" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/saladHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/dish_salad" />

            <TextView
                android:id="@+id/salad"
                style="@style/MenuItemTextStyle"
                tools:text="Salata" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appetizerHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:src="@drawable/dish_appetizer" />

            <TextView
                android:id="@+id/appetizer"
                style="@style/MenuItemTextStyle"
                tools:text="Turşu" />
        </LinearLayout>
    </LinearLayout>
</tr.xip.dinnermenu.ui.widget.ObservableScrollView>
